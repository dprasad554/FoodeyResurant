<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Food.notification.NotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center|start"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/vI_ama_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:background="@drawable/back_arrow"/>
        <TextView
            android:id="@+id/vT_ama_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18"
            android:layout_marginStart="15dp"
            android:textColor="@color/text_color"
            android:text="@string/manage_address"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/expo_bg">
        <TextView
            android:id="@+id/vT_ama_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_16"
            android:text="@string/saved_address"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vR_ama_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:layout_margin="10dp"
        android:scrollbars="none"/>
    <TextView
        android:id="@+id/vT_ama_add"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_red__corner_bend"
        android:gravity="center"
        android:paddingEnd="50dp"
        android:layout_marginTop="10dp"
        android:paddingStart="50dp"
        android:drawableStart="@drawable/auto_direct_my_location"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:text="@string/add_new_address"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />
</LinearLayout>
