<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:id="@+id/vL_aad_main"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/vI_aad_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:background="@drawable/home" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vT_aad_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
        <TextView
            android:id="@+id/vT_aad_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:text="@string/edit"
            android:textSize="@dimen/text_16"
            android:textColor="@color/red"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/vT_aad_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:text="@string/delete"
            android:textSize="@dimen/text_16"
            android:textColor="@color/red"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/vT_aad_deliveryadressval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center|start"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_14"
        android:layout_gravity="center"
        android:padding="@dimen/layout_margin10"
        android:text=""/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/expo_bg" />
</LinearLayout>
