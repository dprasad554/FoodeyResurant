<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/productDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Karthik "
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/customerMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 9668801268"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FR8767"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electrical"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/3/2010"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/orderTime"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:35"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_margin10"
                android:visibility="gone">

                <Button
                    android:id="@+id/acceptOrder"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/layout_margin5"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimaryDark"
                    android:text="accept"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>