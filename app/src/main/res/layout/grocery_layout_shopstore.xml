<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_shop"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:background="@null"
    android:elevation="8dp"
    android:divider="@android:color/holo_green_light"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardElevation="35dp"
    card_view:cardPreventCornerOverlap="false"

    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            >
            <ImageView
                android:id="@+id/iv_shopName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/productslidetwo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shopStore"
                android:textSize="16sp"
                android:padding="2dp"
                android:textColor="@color/colorLightBlack"
                />

            <TextView
                android:id="@+id/tv_shopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shopStoreAddress"
                android:textSize="12sp"
                android:padding="2dp"
                android:maxLines="1"
                android:textColor="@color/colorLightBlack"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>