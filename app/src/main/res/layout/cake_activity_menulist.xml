<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.CakeMenulist_Activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:background="@color/colorBlue"
                app:titleTextColor="@color/colorWhite"
                android:layout_height="?attr/actionBarSize"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/birthday"
                        />

                    <TextView
                        android:id="@+id/tv_cakeBirthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"
                        android:padding="6dp"
                        android:text="@string/birthday"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_increase"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="-"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:onClick="decreaseInteger"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />

                    <TextView
                        android:id="@+id/tv_integerNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_decrease"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="+"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="10dp"
                        android:onClick="increaseInteger"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="90dp"
                    >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/welcome"
                        />

                    <TextView
                        android:id="@+id/tv_cakeWelcome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"
                        android:padding="6dp"
                        android:text="@string/welcome"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_increase1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="-"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:onClick="decreaseInteger1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />

                    <TextView
                        android:id="@+id/tv_integerNumber1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_decrease1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="+"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="10dp"
                        android:onClick="increaseInteger1"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:contentPadding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/anniversary"
                        />

                    <TextView
                        android:id="@+id/tv_cakeAnniversary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"
                        android:padding="6dp"
                        android:text="@string/welcome"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_increase2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="-"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:onClick="decreaseInteger2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />

                    <TextView
                        android:id="@+id/tv_integerNumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_decrease2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="+"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="10dp"
                        android:onClick="increaseInteger2"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="90dp"
                    >

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wedding"
                        />

                    <TextView
                        android:id="@+id/tv_cakeWedding"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"
                        android:padding="6dp"
                        android:text="@string/welcome"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_increase3"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="-"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:onClick="decreaseInteger3"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />

                    <TextView
                        android:id="@+id/tv_integerNumber3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorBlack"
                        />

                    <Button
                        android:id="@+id/btn_decrease3"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:text="+"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="10dp"
                        android:onClick="increaseInteger3"
                        android:layout_gravity="center"
                        android:background="@color/colorBlue"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>