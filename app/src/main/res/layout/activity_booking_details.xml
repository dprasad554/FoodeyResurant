<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Food.eatout.BookingDetailsActivity">

    <include layout="@layout/toolbar_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/vT_abd_pname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="The Black Rabbit"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/vT_abd_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="Whitefield,Bangalore"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
                <TextView
                    android:id="@+id/vT_abd_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_14"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/expo_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/vT_abd_booking_rec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_12"
                    android:text="@string/booking_received"/>
                <TextView
                    android:id="@+id/vT_abd_confirm_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_12"
                    android:text="@string/confirm_booking"/>
                <TextView
                    android:id="@+id/vT_abd_confirmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_12"
                    android:text="@string/confirmed"/>
            </LinearLayout>

            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/vS_abd_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                app:spb_animateToCurrentProgressState="true"
                app:spb_checkStateCompleted="true"
                app:spb_currentStateDescriptionColor="@color/colorPrimary"
                app:spb_currentStateNumber="two"
                app:spb_descriptionTopSpaceIncrementer="10dp"
                app:spb_maxStateNumber="three"
                app:spb_stateBackgroundColor="#BDBDBD"
                app:spb_stateDescriptionColor="#808080"
                app:spb_stateDescriptionSize="8sp"
                app:spb_stateForegroundColor="@color/colorPrimary"
                app:spb_stateLineThickness="2dp"
                app:spb_enableAllStatesCompleted="false"
                app:spb_stateNumberBackgroundColor="#808080"
                app:spb_stateNumberForegroundColor="#eeeeee"
                app:spb_stateSize="40dp" />
            <TextView
                android:id="@+id/vT_abd_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="3dp"
                android:text="Your table status will be updated by 11th July 2018"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_14" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/card_border_stroke_white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vT_abd_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="@string/name"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/vT_abd_nameval"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Sunil"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_10" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vT_abd_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="@string/date"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/vT_abd_dateval"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="3rd July 2018"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_10" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vT_abd_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="@string/time"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/vT_abd_timeval"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="10:45 PM"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_10" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/vT_abd_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center"
                        android:text="@string/no_of_guest"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_12" />
                    <TextView
                        android:id="@+id/vT_abd_noval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="4 M"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_12" />
                    <TextView
                        android:id="@+id/vT_abd_orderid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="ID:365726G"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/expo_bg"/>
            <LinearLayout
                android:id="@+id/vL_abd_soffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/vT_abd_soffer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_offer"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                    <TextView
                        android:id="@+id/vT_abd_sofferval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="15% of on Buffet"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/expo_bg"/>
            <LinearLayout
                android:id="@+id/vL_abd_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/vT_abd_direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/get_direction"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/expo_bg"/>
            <LinearLayout
                android:id="@+id/vL_abd_view_res_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/vT_abd_view_res_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_restaurant_details"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/expo_bg"/>
            <LinearLayout
                android:id="@+id/vL_abd_share_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/vT_abd_share_booking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/share_booking"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/expo_bg"/>
            <LinearLayout
                android:id="@+id/vL_abd_cancel_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/vT_abd_cancel_booking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel_booking"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/expo_bg"/>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:id="@+id/vL_abd_have_ques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/vT_abd_have_ques"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/have_ques"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
