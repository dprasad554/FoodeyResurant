<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/card_border_stroke_white"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="4dp"
    android:id="@+id/vL_ado_main"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vT_ado_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15% off on Buffet"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_16" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vT_ado_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Mon - Sun"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/vT_ado_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.00AM to 11.30PM  (Bookings)"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_12" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vT_ado_vaild"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/circle_grey__corner_bend"
            android:gravity="center"
            android:singleLine="true"
            android:text="Offer Valid till 11.00PM"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/vT_ado_select"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/circle_red__corner_bend"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/select_offer"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
</LinearLayout>
