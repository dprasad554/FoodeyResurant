<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vL_admd_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="wrap_content"
        android:text="Add Instructions"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        android:padding="5dp"/>
    <ImageView
        android:id="@+id/close_popup"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="30sp"
        android:padding="5dp"
        android:src="@drawable/close_popup"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_l" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
       <EditText
           android:id="@+id/vL_ins_desc"
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:background="@drawable/instruction_box"
           android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/store_instruction_txt"
        android:textColor="@color/red"
        android:textSize="@dimen/text_14"
        android:padding="5dp"
        />



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/vL_add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="@dimen/text_20"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/text_16"/>


    </LinearLayout>

</LinearLayout>
