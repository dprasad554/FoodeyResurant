<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Food.eatout.RestaurantDetailsActivityCopy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp">

        <ImageView
            android:id="@+id/vI_ard_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/back_arrow"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_16"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/vI_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/text_16"
            android:background="@drawable/gl_search"
            android:tint="@color/black"
            android:backgroundTint="@color/black"
            android:contentDescription="@string/app_name" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vR_ard_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_marginTop="@dimen/layout_margin10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/vT_ard_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="0.8"
                        android:singleLine="true"
                        android:text="The Black Rabbit"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_16"
                        android:paddingStart="10sp"/>

                    <TextView
                        android:id="@+id/vT_ard_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/circle_blue"
                        android:paddingStart="10dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="2dp"
                        android:text="@string/open_now"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_8"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/vT_ard_viewmap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="@string/view_map"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_12"
                        android:layout_gravity="center"
                        android:background="@drawable/gradient_red"
                        android:padding="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin5">

                    <TextView
                        android:id="@+id/vT_ard_place"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="0.8"
                        android:singleLine="true"
                        android:text="Whitefield,Bangalore"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_12"
                        android:paddingStart="10sp"/>

                    <TextView
                        android:id="@+id/vT_ard_timing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="12 non to 12 PM"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_8"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.8"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/vT_ard_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Causal Dinning - Asian - BBQ"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_10"
                            android:paddingStart="10sp"
                            android:layout_gravity="center"/>

                        <!--<TextView
                            android:id="@+id/vT_ard_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="Book Table"
                            android:textColor="@color/white"
                            android:background="@drawable/gradient_blue"
                            android:textSize="@dimen/text_10"
                            android:gravity="center"
                            android:layout_gravity="right"/>-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/vT_ard_book"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/gradient_blue"
                            android:gravity="center"
                            android:text="@string/book_table"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12"
                            android:padding="3dp"/>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_16">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layerType="software"
                        android:src="@drawable/dashed_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_16"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:singleLine="true"
                            android:text=" * 4.3"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:orientation="horizontal"
                        android:gravity="center">


                        <TextView
                            android:id="@+id/del_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="28 mins"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:orientation="horizontal"
                        android:gravity="center">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₹350"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                           android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Taste 79%"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Time"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.33"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="For Two"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:gravity="center"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_16">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layerType="software"
                        android:src="@drawable/dashed_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_16"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/vI_cpn"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:src="@drawable/coupon_new"
                        android:visibility="invisible"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:text="@string/offer_txt"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="2sp"
                        android:layout_gravity="center"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/vT_st"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="VEG ONLY"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:layout_gravity="center"/>

                    <Switch
                        android:id="@+id/vS_sb"
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:layout_height="wrap_content"
                         android:gravity="start"/>
                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="visible"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/fcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dotted"
                        android:drawableStart="@drawable/coupon_new"
                        android:text="@string/offer_txt"
                        android:textColor="@color/blue"

                        />


                </LinearLayout>-->


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vR_offer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:overScrollMode="never"
                android:scrollbars="none" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fl_containerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>

    </LinearLayout>

    <!--</android.support.v4.widget.NestedScrollView>-->

</LinearLayout>