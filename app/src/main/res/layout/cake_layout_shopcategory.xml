<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_shopImage"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image1"
                    android:layout_margin="8dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_shopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/just"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:textColor="@color/colorBlue"
                        />

                    <TextView
                        android:id="@+id/tv_shopRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorBlue"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:id="@+id/tv_shopTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        android:textSize="12sp"
                        android:padding="6dp"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@id/tv_shopName"
                        />

                    <TextView
                        android:id="@+id/tv_shopDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shopaddress"
                        android:textSize="12sp"
                        android:padding="6dp"
                        android:textColor="@color/colorBlue"
                        android:layout_below="@id/tv_shopTime"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>