<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/vR_adeot_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/vC_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/vC_adeot_card"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:id="@+id/vI_adeot_image"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/great_food"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/vT_adeot_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:singleLine="true"
                                    android:text="Product name"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_14" />
                                <CheckBox
                                    android:id="@+id/checkBox"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:layout_height="wrap_content"
                                    android:onClick="itemClicked"
                                    />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/vT_adeot_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3sp"
                                android:singleLine="true"
                                android:text="200"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_10" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                            <TextView
                                android:id="@+id/vT_adeot_style"
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="20 % 0ff"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_10"
                                android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/vT_add"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.3"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/addtocartgreen"
                                    android:background="@drawable/box"
                                    android:layout_marginBottom="5sp"
                                    android:gravity="center"
                                    android:text="ADD"
                                    android:padding="4dp"
                                    android:textColor="@color/green"
                                    android:textSize="10sp"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/vT_cancel"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.3"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_cancel"
                                    android:background="@drawable/box"
                                    android:layout_marginBottom="5sp"
                                    android:layout_marginStart="5sp"
                                    android:gravity="center"
                                    android:text="REMOVE"
                                    android:padding="4dp"
                                    android:textColor="@color/red"
                                    android:textSize="10sp"
                                    android:visibility="gone"/>
                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/expo_bg" />




                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:id="@+id/vV_adeot_view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/expo_bg" />

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>

