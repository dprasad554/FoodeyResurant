<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_textblack40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_white_side_two_corner_bend"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vI_pi_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/close_popup" />
        <TextView
            android:id="@+id/vT_pi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:text="The Black Rabbit"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_16" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/vT_pi_photos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/photos"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_14" />
            <TextView
                android:id="@+id/vT_pi_pcount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="1 of 16"
                android:gravity="end|center"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/right_arrow"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_18" />
        </LinearLayout>
     <!--   <com.foodres.app.carousel.PagerContainer
            android:id="@+id/vP_pi_planContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:overScrollMode="never">-->

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vV_pi_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:overScrollMode="never"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:clipToPadding="false">

            </androidx.viewpager.widget.ViewPager>

     <!--   </com.foodres.app.carousel.PagerContainer>-->

    </LinearLayout>

</LinearLayout>
