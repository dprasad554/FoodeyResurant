<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:id="@+id/fav_btn"
            >
            <ImageView
                android:id="@+id/iv_fav_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"
                android:layout_margin="5dp"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/fimg_pr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/ftv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:text="laptop"
                android:textColor="#000000"
                android:maxLines="1"
                ndroid:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/ftv_quantiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:layout_below="@+id/ftv_name"
                android:text="laptop"
                android:textColor="#000000"
                ndroid:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/ftv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:layout_below="@+id/ftv_quantiy"
                android:text="laptop"
                android:textColor="@color/green"
                ndroid:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/ftv_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:layout_below="@+id/ftv_price"
                android:text="laptop"
                android:textColor="#000000"
                ndroid:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ftv_mrp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:gravity="right"
                >
            <LinearLayout
                android:id="@+id/vL_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:visibility="visible">
                <TextView
                    android:id="@+id/vT_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/addtocartgreen"
                    android:background="@drawable/box"
                    android:text="ADD"
                    android:padding="5dp"
                    android:textColor="@color/green"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vL_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5sp"
                android:paddingStart="5sp"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@drawable/box">

                <ImageView
                    android:id="@+id/qtyM"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/remove" />

                <TextView
                    android:id="@+id/qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/qtyA"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/addtocart" />

            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
