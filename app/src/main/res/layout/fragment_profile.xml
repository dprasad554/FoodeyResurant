<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/expo_bg"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/vI_fp_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/profile_red"
                            android:contentDescription="@string/app_name" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vT_fp_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunil Naik"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/vT_fp_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="98765677758"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/vT_fp_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="sunil@gmail.com"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/vT_fp_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/edit"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_16"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/expo_bg" />

            <LinearLayout
                android:id="@+id/vL_fp_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/map_2"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_manage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="@string/manage_address"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vL_fp_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/shopping_cart"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/cart"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vL_fp_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/info"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/about"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vL_fp_contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/contact"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_contactus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/contact_us"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/i_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/vL_fp_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/privacy"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_privacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/privacy"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vL_fp_refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/refund"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_refund"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/refund"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vL_fp_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/term"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_terms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/terms"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vL_fp_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/advise"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_disclaimer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/disclaimer"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vL_fp_signout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.08"
                    android:layout_gravity="center"
                    android:background="@drawable/signout"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:id="@+id/vT_fp_signout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_marginStart="10dp"
                    android:text="@string/signout"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow_small"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
