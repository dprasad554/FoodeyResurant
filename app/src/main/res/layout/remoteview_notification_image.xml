<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/remoteview_notification_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_16"
        tools:text="@string/home"
        android:gravity="left|center"/>

    <TextView
        android:id="@+id/remoteview_notification_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_16"
        tools:text="@string/home"
        android:gravity="left|center"
        android:layout_marginTop="@dimen/layout_margin5"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/remoteview_notification_icon"/>

</LinearLayout>