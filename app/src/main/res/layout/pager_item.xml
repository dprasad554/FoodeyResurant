<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!--Restaurant Design 1 -->
        <LinearLayout
            android:id="@+id/vL_pi_select_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/food_cart"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/vT_pi_select_res"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|bottom"
                    android:text="@string/select_res"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/vT_pi_select_res_sam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|end"
                android:text="@string/select_res_sam"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_pi_select_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vT_pi_select_food"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|bottom"
                    android:text="@string/select_food"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_18" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/coffee"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>

            <TextView
                android:id="@+id/vT_pi_select_food_sam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|start"
                android:text="@string/select_food_sam"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_pi_order_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/scooter"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/vT_pi_order_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|bottom"
                    android:text="@string/order_food"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/vT_pi_order_food_sam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|end"
                android:text="@string/order_res_sam"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
        <!--Restaurant Design 1 -->

        <!--Restaurant Design 2 -->
        <LinearLayout
            android:id="@+id/vL_pi_select_gross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/shops"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/vT_pi_select_gross"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|bottom"
                    android:text="@string/select_store"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/vT_pi_select_gross_sam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
