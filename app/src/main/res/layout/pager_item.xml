        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_pi_select_gross_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vT_pi_select_gross_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|bottom"
                    android:text="@string/select_grocery"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_18" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/groceries"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>

            <TextView
                android:id="@+id/vT_pi_select_gross_sam_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|start"
                android:text="@string/select_grocery_sam"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_pi_order_gross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/delivery_boy"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/vT_pi_order_gross"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|bottom"
                    android:text="@string/order_grocery"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/vT_pi_order_gross_sam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center|end"
                android:text="@string/deliver_grocery"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
        <!--Restaurant Design 2 -->

        <!--Restaurant Design 3 -->
        <LinearLayout
