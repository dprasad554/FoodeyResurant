    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/circle_while_corner_bend"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_grey_corner_bend"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_white"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/auto_direct_my_location1"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vT_aaa_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_location"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/vT_aaa_currentval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="No 15, Whitefield,Bangalore."
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_aaa_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/vL_aaa_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vI_aaa_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_place_2"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/vT_aaa_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vL_aaa_work"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vI_aaa_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/work_place_1"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/vT_aaa_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/work"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vL_aaa_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vI_aaa_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/map_2"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/vT_aaa_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/vE_aaa_house"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/house_flat"
            android:inputType="textCapSentences"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/vE_aaa_apartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/apartment"
            android:inputType="textCapSentences"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/vE_aaa_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/street"
            android:inputType="textCapSentences"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/vE_aaa_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/area"
            android:inputType="textCapSentences"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/vE_aaa_landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/land_mark"
            android:inputType="textCapSentences"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/vE_aaa_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/city"
            android:inputType="textCapSentences"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/vE_aaa_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/state"
            android:inputType="textCapSentences"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

        <EditText
            android:id="@+id/vE_aaa_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/pincode"
            android:inputType="number"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_14"
            android:theme="@style/EditTextTheme" />

    </LinearLayout>

    <TextView
        android:id="@+id/vT_aaa_add"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradient_blue"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />

</RelativeLayout>
