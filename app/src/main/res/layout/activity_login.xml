<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slider_back__"
    android:orientation="vertical"
    tools:context=".Food.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vI_al_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/back_arrow"
            android:contentDescription="@string/app_name"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="20dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/table"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/vT_al_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="@string/goody_foody"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_25" />

        <TextView
            android:id="@+id/vT_al_instant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instant_food_delivery"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/vT_al_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/login"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/phone_call"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/vE_al_Mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:hint="@string/phone_num"
                android:inputType="phone"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_20"
                android:theme="@style/EditTextTheme"
                android:maxLength="10"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/vI_al_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/password"
                android:contentDescription="@string/app_name" />

            <EditText
                android:id="@+id/vE_al_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/vI_al_pass"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_16"
                android:theme="@style/EditTextTheme" />

            <TextView
                android:id="@+id/vT_al_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/forgot"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vT_al_logina"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/circle_red_corner_bend"
                android:gravity="center"
                android:paddingEnd="50dp"
                android:paddingStart="50dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/vL_al_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/vT_al_new_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_user"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/vT_al_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_now"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_al_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/facebook"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/vT_al_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="start"
                android:text="@string/signin_fb"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_18" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
